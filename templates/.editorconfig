# Editor configuration; see https://editorconfig.org.
root = true

# Defaults for all files.
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Whitespace is significant in markdown.
[*.md]
trim_trailing_whitespace = false
